     "header" : "1.26 WIND",
     "icon" : "<img src=\"images\/icons\/snow.svg\" alt=\"Icon: Standard Observation\" style=\"margin:2px !important\">",
"contentHTML" : "<!-- START SWAG content -->
      <main>
          <!-- START tables index accordion -->
          <div class=\"accordion\" id=\"tablesIndexAccordion\">
            <div class=\"accordion-item\">
            <h2 class=\"accordion-header\" id=\"tablesIndexheading\">
            <button class=\"accordion-button collapsed text-info bg-light\" type=\"button\" data-bs-toggle=\"collapse\" data-bs-target=\"#tablesIndexcollapse\" aria-expanded=\"false\" aria-controls=\"tablesIndexcollapse\">
            Tables
            <\/button>
            <\/h2>
            <div id=\"tablesIndexcollapse\" class=\"accordion-collapse collapse collapse\" aria-labelledby=\"tablesIndexheading\" data-bs-parent=\"#tablesIndexAccordion\">
            <!-- START table -->
            <div class=\"list-group\">
              <a href=\"#table1-8Accordion\" class=\"list-group-item list-group-item-action\">Table 1.8 Wind Speed Estimation<\/a>
              <a href=\"#table1-10Accordion\" class=\"list-group-item list-group-item-action\">Table 1.10 Direction of Wind<\/a>
            <\/div>
