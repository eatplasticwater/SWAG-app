             <div class=\"accordion-body\">
              <!-- START table 1-10 -->
                <div class=\"table-responsive\">
               <h5 id=\"table-1-10\">Table 1.10 Direction of Wind Relative to True North<\/h5>
               <table class=\"table table-bordered\">
               <tbody>
                 <tr>
                 <th>Direction<\/th>
                 <td>N<\/td>
                 <td>NE<\/td>
                 <td>E<\/td>
                 <td>SE<\/td>
                 <td>S<\/td>
                 <td>SW<\/td>
                  <td>W<\/td>
                  <td>NW<\/td>
                 <\/tr>
                 <tr>
                 <th>Degrees<\/th>
                  <td>0<\/td>
                  <td>45<\/td>
                  <td>90<\/td>
                  <td>135<\/td>
                  <td>180<\/td>
                  <td>225<\/td>
                   <td>270<\/td>
                   <td>315<\/td>
                 <\/tr>
                 
               <\/tbody>
               <\/table>
               <\/div>
                <!-- END table 1-10 -->
             <\/div>
             <\/div>
           <\/div>
           <\/div>
